<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:foreground="?selectableItemBackground">

    <ImageView
        android:id="@+id/image_bis"
        android:layout_width="88dp"
        android:layout_height="100dp"
        android:src="@drawable/img_rapport"
        />

    <LinearLayout
        android:id="@+id/text_container_new"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/image_bis"
        android:layout_toRightOf="@id/image_bis"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

        <!--android:layout_weight="slide1"
            android:gravity="bottom" -->


        <TextView
            android:id="@+id/fiche2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fiche"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="14sp"
            />


        <TextView
            android:id="@+id/file_name_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/name_text_view"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="121dp"
            tools:text="Rapport Tchad" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/language_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="121dp"
            tools:text="Language :" />






    </LinearLayout>


</RelativeLayout>